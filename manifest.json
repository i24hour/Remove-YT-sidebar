{
    "manifest_version": 3,
    "name": "YouTube Clean Sidebar",
    "version": "1.1",
    "description": "Hide YouTube right-side video recommendations.",
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "idle",
        "windows",
        "alarms",
        "identity"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://script.google.com/*",
        "https://*.firebaseapp.com/*",
        "https://*.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "config.json"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
